      </div>
      <div className="absolute inset-0 w-full h-full bg-[url('data:image/svg+xml,...')] opacity-20 -z-10"></div>
      
      <main className="max-w-7xl mx-auto space-y-8">
        <ProfileHeader />
        
        <div className="grid grid-cols-1 lg:grid-cols-4 gap-6">
